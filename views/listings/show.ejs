<% layout("./layouts/boilerplate") %>
<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="show-heading fw-semibold mt-2 fs-2"><%= listing.title %></h3>
      <div class="card show-card" style="border: none">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="..."
        />
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Owned By: &nbsp;&nbsp; <%= listing.owner.username %>
            </li>
            <li class="list-group-item"><%= listing.description %></li>
            <li class="list-group-item fw-bold">
              &#8377;<%= listing.price.toLocaleString("en-IN") %>
            </li>
            <li class="list-group-item"><%= listing.location %></li>
            <li class="list-group-item"><%= listing.country %></li>
          </ul>
        </div>
      </div>
      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns">
        <form action="/listings/<%= listing._id%>/edit" method="GET">
          <button class="btn btn-dark show-btn show-edit" type="submit">
            Edit
          </button>
        </form>
        <form
          action="/listings/<%= listing._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-dark show-btn" type="submit">Delete</button>
        </form>
      </div>
      <% } %> <% if(currUser) {%>
      <hr />
      <div class="review col-12">
        <h4><b>Rate your experience</b></h4>
        <form
          action="/listings/<%= listing.id %>/reviews"
          novalidate
          class="needs-validation"
          method="POST"
        >
          <div class="mt-4 mb-1">
            <fieldset class="starability-slot">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="1"
                checked
                aria-label="No rating."
              />
              <input
                type="radio"
                id="first-rate1"
                name="review[rating]"
                value="1"
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="review[rating]"
                value="2"
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="review[rating]"
                value="3"
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="review[rating]"
                value="4"
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="review[rating]"
                value="5"
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-4">
            <label for="comments" class="form-label fs-4">Comments</label>
            <textarea
              name="review[comment]"
              id="comments"
              class="form-control"
              rows="5"
              cols="75"
              required
            ></textarea>
            <div class="valid-feedback">Ayyo you goated my guy</div>
            <div class="invalid-feedback">Enter a comment</div>
          </div>
          <button type="submit" class="btn btn-outline-dark mb-3">
            Submit
          </button>
        </form>
      </div>
      <% } %> <% if(listing.reviews.length !== 0) {%>
      <hr />
      <div class="container">
        <h4><b>Reviews</b></h4>
        <div class="row">
          <% for(rev of listing.reviews){ %>
          <div class="card col-5 mb-3 ms-3">
            <div class="card-body">
              <h5 class="card-title"><%= rev.author.username %></h5>
              <p
                class="starability-result card-text"
                data-rating="<%= rev.rating %>"
              ></p>
              <p class="card-text"><%= rev.comment %></p>
              <% if(rev.author._id.equals(currUser._id)){ %>
              <form
                action="/listings/<%= listing._id %>/reviews/<%= rev._id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-sm btn-dark my-3">DELETE</button>
              </form>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
